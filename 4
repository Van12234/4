#include <iostream>
#include <ctime>
 
using namespace std;
 
int main() {
    srand( time( 0 ) );
 
    int n;
    cout << "Введите n: ";
    cin >> n;
 
    int *arr = new int[ n ];
 
    cout << "Исходный массив: " << endl;
    for ( int i = 0; i < n; ++i ) {
        arr[ i ] = rand() % ( n + n + 1 ) - n;
 
        cout.width( 4 );
        cout << arr[ i ];
    }
 
    for ( int i = 0; i < n - 1; ++i )
        for ( int j = 0; j < n - i - 1; ++j ) {
 
            if ( arr[ j ] > arr[ j + 1 ] ) {
 
                int tmp = arr[ j ];
                arr[ j ] = arr[ j + 1 ];
                arr[ j + 1 ] = tmp;
            }
        }
 
    cout << "\n\nОтсортированный массив: " << endl;
 
    for ( int i = 0; i < n; ++i ) {
 
        cout.width( 4 );
        cout << arr[ i ];
    }
 
    cout << "\nМедиана массива = ";
    if ( n % 2 == 0 )
        cout << ( arr[ n / 2 ] + arr[ n / 2 - 1 ] ) / 2.0;
    else
        cout << arr[ n / 2 ];
 
    delete[] arr;
    return 0;
}
